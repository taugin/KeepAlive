<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bossy">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <instrumentation
        android:name="com.bossy.alive.DaemonInstrumentation"
        android:targetPackage="${applicationId}"
        android:targetProcesses="${applicationId},${applicationId}:core,${applicationId}:service" />

    <application>

        <service
            android:name=".alive.DaemonService1"
            android:process=":core" />
        <service
            android:name=".alive.DaemonService2"
            android:process=":service" />

        <provider
            android:name=".alive.AssistantDaemonProvider"
            android:authorities="${applicationId}.core"
            android:process=":core" />
        <provider
            android:name=".alive.PersistentDaemonProvider"
            android:authorities="${applicationId}.service"
            android:process=":service" />

        <provider
            android:name=".alive.AssistantProvider"
            android:authorities="${applicationId}.core_p"
            android:process=":core_p" />
        <provider
            android:name=".alive.PersistentProvider"
            android:authorities="${applicationId}.service_p"
            android:process=":service_p" />
    </application>

</manifest>