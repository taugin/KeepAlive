<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bossy">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <instrumentation
        android:name="com.bossy.component.DaemonInstrumentation"
        android:targetPackage="${applicationId}"
        android:targetProcesses="${applicationId},${applicationId}:resident,${applicationId}:daemon,${applicationId}:assist1,${applicationId}:assist2" />

    <application>
        <service
            android:name="com.bossy.component.DaemonService"
            android:exported="true"
            android:process=":daemon" />
        <receiver
            android:name="com.bossy.component.DaemonReceiver"
            android:exported="true" />

        <service
            android:name="com.bossy.component.AssistService1"
            android:exported="true"
            android:process=":assist1" />
        <service
            android:name="com.bossy.component.AssistService2"
            android:exported="true"
            android:process=":assist2" />
    </application>

</manifest>