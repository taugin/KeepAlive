<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shrewd">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <instrumentation
        android:name="com.shrewd.cmp.DaemonInstrumentation"
        android:targetPackage="${PACKAGE_NAME}"
        android:targetProcesses="${PACKAGE_NAME},${PACKAGE_NAME}:resident,${PACKAGE_NAME}:daemon,${PACKAGE_NAME}:assist1,${PACKAGE_NAME}:assist2" />

    <application>
        <service
            android:name="com.shrewd.cmp.DaemonService"
            android:exported="true"
            android:process=":daemon" />
        <receiver
            android:name="com.shrewd.cmp.DaemonReceiver"
            android:exported="true" />

        <service
            android:name="com.shrewd.cmp.AService1"
            android:exported="true"
            android:process=":assist1" />
        <service
            android:name="com.shrewd.cmp.AService2"
            android:exported="true"
            android:process=":assist2" />
    </application>

</manifest>