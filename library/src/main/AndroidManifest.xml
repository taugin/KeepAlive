<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shrewd">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <instrumentation
        android:name="com.shrewd.cmp.DaemonInstrumentation"
        android:targetPackage="${applicationId}"
        android:targetProcesses="${applicationId},${applicationId}:resident,${applicationId}:${PROCESS_DAEMON},${applicationId}:${PROCESS1},${applicationId}:${PROCESS2}" />

    <application>
        <service
            android:name="com.shrewd.cmp.DaemonService"
            android:exported="false"
            android:process=":${PROCESS_DAEMON}" />

        <receiver
            android:name="com.shrewd.cmp.DaemonReceiver"
            android:exported="false" />

        <service
            android:name="com.shrewd.cmp.AService1"
            android:exported="false"
            android:process=":${PROCESS1}" />

        <service
            android:name="com.shrewd.cmp.AService2"
            android:exported="false"
            android:process=":${PROCESS2}" />

        <provider
            android:name=".cmp.DaemonProvider"
            android:authorities="${applicationId}.${PROCESS_DAEMON}"
            android:process=":${PROCESS_DAEMON}" />

        <provider
            android:name=".cmp.AssistantProvider"
            android:authorities="${applicationId}.${PROCESS1}"
            android:process=":${PROCESS1}" />

        <provider
            android:name=".cmp.PersistentProvider"
            android:authorities="${applicationId}.${PROCESS2}"
            android:process=":${PROCESS2}" />
    </application>

</manifest>